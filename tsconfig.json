{
  "compilerOptions": {
    "target": "es5",
    "typeRoots": [
      "./types", 
      "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts", 
    "scripts/createTestStore.js",
    "src",
    "Tests"  ],
  "exclude": [
    "node_modules"
  ],
  "types": ["vitest", "node"]
}
